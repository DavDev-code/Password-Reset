import java.util.Scanner;
public class App {
    public static void main(String[] args) throws InterruptedException {
        Scanner in=new Scanner(System.in);
        Scanner input=new Scanner(System.in);
        String user, pass="123pass", mail;
        System.out.println("Log in by entering your Username and Password");
        System.out.print("Username: ");
        user=in.next();
        System.out.print("Password: ");
        String pass_a=in.next();
        if(pass_a.equals(pass)){
            System.out.println("You have succefully Logged in!");
            System.exit(0);
        }
        else if(!pass_a.equals(pass)){
            for(int i=0;i<=1;i++){
                System.out.println("Your password is incorect. Try again.");
                System.out.print("Password: ");
                pass_a=in.next();
                if(pass_a.equals(pass)){
                    i=2;
                    System.out.println("You have succefully Logged in!");
                    System.exit(0);
                }
            }
        }
        System.out.println("You have exceeded the amount of log-in attempts. Enter your email address to recover your password.");
        System.out.print("Email address: ");
        mail=input.nextLine();
        if(mail.isEmpty()){
            System.out.println("Please contact customer support to resolve your issue.");
            System.exit(0);
        }
        
        System.out.println("An email has been sent to "+mail+". Follow the instructions to recover your password.");
        System.out.println("Proccessing...");
        Thread.sleep(1500);
        System.out.println("Proccessing...");
        Thread.sleep(1500);
        System.out.println("Proccessing...");
        Thread.sleep(1500);
        System.out.println("Please enter a new password");
        System.out.print("Password: ");
        String pass_b=in.next();
        System.out.print("Confirm your new password: ");
        String pass_c=in.next();
        if(pass_b.equals(pass_c)){
            System.out.println("You have succefully changed your password.");
            System.exit(0); 
        }
        else if(!pass_b.equals(pass_c)){
            System.out.println("Password reset failed. The password doesn't match with your new password.");
            System.exit(0); 
        }
    }
}
